[Unit]
Description=FarmaDisplay FastAPI Backend
After=network.target postgresql.service redis.service
Requires=postgresql.service redis.service

[Service]
Type=exec
User=www-data
Group=www-data
WorkingDirectory=/opt/farmadisplay/backend
Environment="PATH=/opt/farmadisplay/backend/venv/bin"
ExecStart=/opt/farmadisplay/backend/venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000 --workers 4
Restart=always
RestartSec=10

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/farmadisplay/backend /var/log/farmadisplay

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=farmadisplay-api

[Install]
WantedBy=multi-user.target

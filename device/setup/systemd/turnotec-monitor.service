[Unit]
Description=TurnoTec Connectivity Monitor
After=network-online.target turnotec-hotspot.service
Wants=network-online.target

[Service]
Type=simple
User=root
ExecStart=/opt/turnotec/scripts/connectivity_monitor.sh
StandardOutput=journal
StandardError=journal
Restart=on-failure
RestartSec=30
StartLimitBurst=5
StartLimitIntervalSec=600

[Install]
WantedBy=multi-user.target
